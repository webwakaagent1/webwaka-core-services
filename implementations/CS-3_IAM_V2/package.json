{
  "name": "@webwaka/cs3-iam-v2",
  "version": "1.0.0",
  "description": "WebWaka CS-3: Identity & Access Management V2 - Advanced IAM features including social login, 2FA, session management, and fine-grained RBAC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "migrate:create": "node scripts/migrate.js create",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down"
  },
  "keywords": [
    "webwaka",
    "iam",
    "authentication",
    "authorization",
    "social-login",
    "2fa",
    "rbac"
  ],
  "author": "Manus AI",
  "license": "PROPRIETARY",
